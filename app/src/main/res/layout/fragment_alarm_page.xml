<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmPage">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tect"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnAlarm"
        android:layout_alignStart="@+id/btnAlarm"
        android:layout_marginBottom="-36dp"
        android:text=" बिहानको लागि अलार्म सेट गर्नुस" />

    <Button
        android:id="@+id/btnAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="36dp"
        android:text="alarmSet" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnAlarm"
        android:layout_centerHorizontal="true"
        android:text="Cancel" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/tect1"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tect"
        android:layout_marginTop="173dp"
        android:text="बेलुकाको लागि अलार्म सेट गर्नुस " />

    <Button
        android:id="@+id/btnAlarm1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnAlarm"
        android:layout_marginTop="199dp"
        android:text="alarmSet" />

    <Button
        android:id="@+id/btnCancel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnAlarm1"
        android:layout_centerHorizontal="true"
        android:text="Cancel" />

    <TextView
        android:id="@+id/ter"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/btnAlarm"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="53dp"
        android:text="" />

    <TextView
        android:id="@+id/ter1"
        android:layout_width="74dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ter"
        android:layout_marginTop="205dp"
        android:text="" />


</RelativeLayout>